---
const { href, description, title, price } = Astro.props;
---
<div class="pricing-card__card">
  <a class="pricing-card__link" href={href}>
    <div class="pricing-card__text">
      <h2 class="pricing-card__title">{title}</h2>
      <p><slot/></p>
    </div>
    <span class="pricing-card__price">{price}â‚¬</span>
  </a>
</div>


<style>
  .pricing-card__card {
    display: flex;
    justify-content: stretch;
    color: var(--theme-on-surface-2);
    background-color: var(--theme-surface-2);
    border-radius: var(--theme-shape-radius);
  }
  .pricing-card__link {
    flex: 1;
    display: flex;
    text-decoration: none;
    padding: var(--theme-shape-radius);
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }
  .pricing-card__text {
    flex: 1 1 auto;
    display:flex;
    flex-direction: column;
    text-decoration: none;
    margin-right: 2rem;
  }
  .pricing-card__title {
    font-family: var(--theme-font-family-sans);
    font-size: var(--font-size-md);
  }
  .pricing-card__price {
    display: block;
    font-family: var(--theme-font-family-serif);
    font-size: var(--font-size-md);
    font-weight: bold;
    justify-self: flex-end;
  }
  @media screen and (max-width: 440px) {
    .pricing-card__link {
      flex-direction: column;
    }
  }
  @media screen and (min-width: 768px) {
    .pricing-card__link {
      flex-direction: column;
    }
    .pricing-card__text {
      margin-right: 0;
    }
    .pricing-card__price {
      margin: 0;
    }
  }
  </style>