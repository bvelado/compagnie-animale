---
const { href, description, title, price } = Astro.props;
---

<style>
  .pricing-card__card {
    background-color: var(--theme-surface-2);
    color: var(--theme-on-surface-2);
    border-radius: var(--theme-shape-radius);
  }
  .pricing-card__link {
    display: block;
    text-decoration: none;
    height: 100%;
  }
  .pricing-card__content {
    padding: 1rem 1rem 0 1rem;
    display: flex;
    height: 100%;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    overflow-y: hidden;
  }
  .pricing-card__title {
    font-family: var(--theme-font-family-sans);
  }
  .pricing-card__text {
    text-decoration: none;
  }
  .pricing-card__price {
    font-family: var(--theme-font-family-serif);
    font-size: var(--font-size-md);
    font-weight: 700;

    padding: 0 1rem 1rem 1rem;
    margin-left: auto;
  }
</style>

<div class="pricing-card__card">
  <a class="pricing-card__link" href={href}>
    <div class="pricing-card__content">
      <div class="pricing-card__text">
        <h3 class="pricing-card__title">{title}</h3>
        <p>{description}</p>
      </div>
      <div class="pricing-card__price">{price}â‚¬</div>
    </div>
  </a>
</div>
