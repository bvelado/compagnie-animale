---
const { src, alt, caption } = Astro.props;
---

<div class="image__wrapper">
	<img class="image__img" {src} {alt} loading="lazy" decoding="async">
    { caption && 
        <span class="image__caption">{caption}</span>
    }
	</img>
</div>

<style>
	.image__img {
		width: 100%;
		height: 100%;
		max-height: 80vh;
		object-fit: cover;
		border-radius: var(--theme-shape-radius);
	}
    .image__caption {
		font-style: italic;
		text-align: center;
		/* font-size: var(--font-size-sm); */
        position: absolute;
        bottom: 0;
        padding: 1rem;
        color: #fff;
        background-color: rgba(0,0,0,0.6);
        border-bottom-left-radius: var(--theme-shape-radius);
        border-bottom-right-radius: var(--theme-shape-radius);
	}
</style>
