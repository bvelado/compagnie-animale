---
const { src, alt, caption } = Astro.props;
---

<div class="image__wrapper">
	<img class="image__img" {src} {alt} loading="lazy" decoding="async">
	</img>
	{ caption && 
        <span class="image__caption">{caption}</span>
    }
</div>

<style>
	.image__img {
		width: 100%;
		height: 100%;
		max-height: 80vh;
		object-fit: cover;
		border-radius: var(--theme-shape-radius);
	}
    .image__caption {
		display: block;

		font-style: italic;
		text-align: center;
		/* font-size: var(--font-size-sm); */
        padding: 0.4rem 2rem 0rem 2rem;
        color: var(--theme-on-bg);
	}
</style>
