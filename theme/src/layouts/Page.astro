---
import Footer from '../components/core/Footer.astro';
import Layout from './Base.astro';
import type { Props as BaseHeadProps } from '../components/head/BaseHead.astro';
import Logo from '../components/Logo.astro';
import Header from '../components/Header.astro'
import settings from '../config/settings';
import { footerLists, footerSocials } from '../config/footer';

export interface Props {
	seo?: BaseHeadProps;
}

import { navItems } from '../config/links';

const { seo } = Astro.props as Props;

---

<Layout seo={seo}>
	<Header rightMenu navData={navItems} slot="header">
		<Logo slot="logo"/>
	</Header>
	<div id="page">
		<slot />
	</div>
	<Footer
		slot="footer"
		background="var(--theme-surface-1)"
		color="var(--theme-on-surface-1)"
		footerLists={footerLists}
    	footerSocials={footerSocials}
		copyrightName={settings.name}
	>
		<a class="footer-logo__link" href="/" slot="logo">
			<Logo iconColor="#FFF"/>
		</a>
	</Footer>
</Layout>

<style>
	.footer-logo__link {
		display: flex;
		align-items: center;
		text-decoration: none;
	}
</style>
